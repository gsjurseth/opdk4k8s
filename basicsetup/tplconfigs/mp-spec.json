{
  "apiVersion": "apps/v1",
  "kind": "ReplicaSet",
  "metadata": {
    "labels": {
      "app": "mp"
    },
    "name": "mp",
    "namespace": "apigee"
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "app": "mp"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "mp"
        }
      },
      "spec": {
        "containers": [
          {
            "command": [
              "sh",
              "-c",
              "sudo chown apigee:apigee /opt/apigee && sudo HOSTIP=\"$(hostname).rmphs.apigee.svc.cluster.local\" /opt/apigee/apigee-setup/bin/setup.sh -p mp -f /config/cluster.config && while true ; do tail -f /opt/apigee/var/log/edge-message-processor/logs/system.log ; done"
            ],
            "image": "eu.gcr.io/gsj-k8s-training/apigee-opdk:16",
            "imagePullPolicy": "Always",
            "name": "apigee-rmp",
            "ports": [
              {
                "containerPort": 4528,
                "name": "dist-cache"
              },
              {
                "containerPort": 1101,
                "name": "jmx"
              },
              {
                "containerPort": 8082,
                "name": "mgmt-port"
              },
              {
                "containerPort": 8443,
                "name": "tls-for-mp"
              },
              {
                "containerPort": 8998,
                "name": "r-mp-port"
              }
            ],
            "readinessProbe": {
              "tcpSocket": {
                "port": 8082
              },
              "initialDelaySeconds": 120,
              "periodSeconds": 30,
              "timeoutSeconds": 2
            },
            "resources": {
              "requests": {
                "cpu": ".1",
                "memory": ".25Gi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/config",
                "name": "cluster-config",
                "readOnly": true
              }
            ]
          }
        ],
        "securityContext": {
          "fsGroup": 998,
          "runAsUser": 999
        },
        "volumes": [
          {
            "configMap": {
              "defaultMode": 493,
              "name": "cluster-config"
            },
            "name": "cluster-config"
          },
          {
            "configMap": {
              "defaultMode": 493,
              "name": "apigee-license"
            },
            "name": "license-volume"
          }
        ]
      }
    }
  }
}
